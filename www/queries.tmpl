{{> www/common-header.tmpl }}
<h2>Queries</h2>
<p class="lead">This page lists all running queries, plus any completed queries that are
archived in memory. The size of that archive is controlled with the
<samp>--query_log_size</samp> command line parameter.</p>

<h3>{{num_in_flight_queries}} queries in flight</h3>

<table class='table table-hover table-border'>
  <tr>
    <th>User</th>
    <th>Default Db</th>
    <th>Statement</th>
    <th>Query Type</th>
    <th>Start Time</th>
    <th>Duration</th>
    <th>Scan Progress</th>
    <th>State</th>
    <th>Last Event</th>
    <th># rows fetched</th>
    <th>Details</th>
    <th>Action</th>
  </tr>
{{#in_flight_queries}}
  <tr>
    <td>{{effective_user}}</td>
    <td>{{default_db}}</td>
    <td><samp>{{stmt}}</samp></td>
    <td><samp>{{stmt_type}}</samp></td>
    <td>{{start_time}}</td>
    <td>{{duration}}</td>
    <td>{{progress}}</td>
    <td><samp>{{state}}</samp></td>
    <td><samp>{{last_event}}</samp></td>
    <td>{{rows_fetched}}</td>
    <td><a href='/query_plan?query_id={{query_id}}'>Details</a></td>
    <td><a href='/cancel_query?query_id={{query_id}}'>Cancel</a></td>
  </tr>
{{/in_flight_queries}}
</table>

<h3>Last {{completed_log_size}} Completed Queries</h3>

<table class='table table-hover table-border'>
  <tr>
    <th>User</th>
    <th>Default Db</th>
    <th>Statement</th>
    <th>Query Type</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Duration</th>
    <th>Scan Progress</th>
    <th>State</th>
    <th># rows fetched</th>
    <th>Details</th>
  </tr>
{{#completed_queries}}
  <tr>
    <td>{{effective_user}}</td>
    <td>{{default_db}}</td>
    <td><samp>{{stmt}}</samp></td>
    <td><samp>{{stmt_type}}</samp></td>
    <td>{{start_time}}</td>
    <td>{{end_time}}</td>
    <td>{{duration}}</td>
    <td>{{progress}}</td>
    <td><samp>{{state}}</samp></td>
    <td>{{rows_fetched}}</td>
    <td><a href='/query_plan?query_id={{query_id}}'>Details</a></td>
  </tr>
{{/completed_queries}}
</table>

<h3>Query Locations</h3>

<table class='table table-hover table-bordered'>
  <tr>
    <th>Location</th>
    <th>Number of Fragments</th>
  </tr>
{{#query_locations}}
  <tr>
    <td>{{location}}</td>
    <td>{{count}}</td>
  </tr>
{{/query_locations}}
</table>

{{> www/common-footer.tmpl }}
